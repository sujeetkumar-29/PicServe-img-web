<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gallery | PicServe</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="text-center">Gallery for <%= username %></h1>
    <hr>
    <% if (images.length > 0) { %>
      <div class="row">
        <% images.forEach((image, index) => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow">
              <img src="<%= image.url %>" class="card-img-top" alt="Image <%= index + 1 %>">
              <div class="card-body">
                <h5 class="card-title">Image <%= index + 1 %></h5>
                <p class="card-text">Image URL: <a href="<%= image.url %>" target="_blank"><%= image.url %></a></p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No images found for this user.</p>
    <% } %>
    <div class="text-center mt-4">
      <a href="/images" class="btn btn-primary">Go Back</a>
    </div>
  </div>
</body>
</html>
